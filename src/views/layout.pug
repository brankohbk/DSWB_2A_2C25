        script.
            // forms: POST/PUT con redirect
            document.addEventListener('submit', async (e)=>{
                const f = e.target;
                if (!f.hasAttribute('data-ajax')) return;
                e.preventDefault();
                const url = f.action;
                const method = (new URL(url, location)).searchParams.get('_method') || f.method || 'post';
                const body = JSON.stringify(Object.fromEntries(new FormData(f)));
                const res = await fetch(url, { method: method.toUpperCase(), headers:{'Content-Type':'application/json'}, body });
                if (res.ok) location.href = f.getAttribute('data-redirect') || '/';
                else alert('Error: ' + (await res.text()));
            });

            // delete links
            document.addEventListener('click', async (e)=>{
                const a = e.target.closest('[data-del]');
                if (!a) return;
                e.preventDefault();
                if (!confirm('Â¿Eliminar?')) return;
                const res = await fetch(a.getAttribute('data-del'), { method:'DELETE' });
                if (res.ok) location.reload();
                else alert('Error: ' + (await res.text()));
            });
