extends ../layout 
block content 
    h2 #{title}
    form(data-ajax data-redirect='/pacientes' method='post', action='/api/pacientes')
        label
            span Nombre
            input(type='text', name='nombre', required)
        
        label
            span Apellido
            input(type='text', name='apellido', required)

        label
            span DNI
            input(type='text', name='dni', required)
            
        label
            span Fecha de Nacimiento
            input(type='date', name='fechaNacimiento', required)
        label Obra Social
            if coberturas && coberturas.length
                select(name='obraSocial', required)
                    option(value='', selected) Seleccione 
                    each cobertura in coberturas
                        option(value=cobertura.id)= `${cobertura.prestador} | ${cobertura.plan}`
                    
            else
                p No hay coberturas cargadas            
        label
            span Teléfono (Opcional)
            input(type='text', name='telefono')
            
        label
            span Email (Opcional)
            input(type='email', name='email')
        
        a(href='/pacientes', class="btn btn-red") ❌ Cancelar
        button(type='submit', class="btn btn-green btn-guardar") ✅ Guardar