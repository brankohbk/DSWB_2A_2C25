extends ../layout
block content 
    h2 #{title} 
    a(href='/empleados/nuevo', class="btn btn-green") &plus; Nuevo 
    if empleados && empleados.length
        div(class="table-container")
            table(border = '1' cellpadding = '6')
                thead 
                    tr 
                        th Nombre 
                        th Rol 
                        th Área
                        th ID 
                        th Editar 
                        th Eliminar
                    tbody 
                        each e in empleados 
                            tr 
                                td= e.nombre 
                                td= e.rol 
                                td= e.area 
                                td(class="txt-wrap")= e.id
                                td 
                                    a(href= `/empleados/${e.id}/editar`, class="btn btn-yellow") ✍🏻 Editar
                                td
                                    form(data-ajax data-redirect='/empleados' method='post',action=`/api/empleados/${e.id}?_method=DELETE`, style='display:inline')
                                        button(type='submit', class="btn btn-red", onclick=`return confirm("¿Seguro que quiere eliminar el empleado ${e.nombre} ?")`) 🗑️ Eliminar
    else 
        p No hay empleados.
